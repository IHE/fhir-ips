				<valueCode value="C"/>
			</extension>
			<path value="PastProblem.DateResolved"/>
			<short value="Date resolved"/>
			<definition value="Conditional on a health condition deemed to have been ‘resolved’."/>
			<min value="0"/>
			<max value="*"/>
			<type>
				<code value="http://hl7.org/fhir/uv/ips/StructureDefinition/DateTime"/>
			</type>
		</element>
